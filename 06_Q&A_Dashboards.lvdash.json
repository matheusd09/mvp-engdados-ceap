  "datasets": [
    {
      "name": "1f35ee46",
      "displayName": "Dash_Gastos_Totais",
      "queryLines": [
        "   \n",
        "--Como os gastos se distribuem ao longo dos meses do ano?\n",
        "SELECT\n",
        "  t.ano,\n",
        "  t.mes,\n",
        "  SUM(f.valor_documento) AS total_mes\n",
        "FROM mvp_ed_ceap.layer_gold.fato_despesa_ceap f\n",
        "JOIN mvp_ed_ceap.layer_gold.dim_tempo t\n",
        "  ON f.id_tempo = t.id_tempo\n",
        "GROUP BY t.ano, t.mes\n",
        "ORDER BY t.ano, t.mes;\n"
      ]
    },
    {
      "name": "b73e1ef3",
      "displayName": "Dash_Gastos_Parlamentares",
      "queryLines": [
        "--Quais parlamentares apresentam os maiores volumes de despesas?\n",
        "SELECT\n",
        "  p.nome_parlamentar,\n",
        "  SUM(f.valor_documento) AS total_gasto\n",
        "FROM mvp_ed_ceap.layer_gold.fato_despesa_ceap f\n",
        "JOIN mvp_ed_ceap.layer_gold.dim_parlamentar p\n",
        "  ON f.id_parlamentar = p.id_parlamentar\n",
        "GROUP BY p.nome_parlamentar\n",
        "ORDER BY total_gasto DESC\n",
        "LIMIT 20;\n"
      ]
    },
    {
      "name": "994176ea",
      "displayName": "Dash_Gastos_UF",
      "queryLines": [
        "--Como os gastos se distribuem entre as UFs?\n",
        "SELECT\n",
        "  u.sigla_uf,\n",
        "  SUM(f.valor_documento) AS total_gasto\n",
        "FROM mvp_ed_ceap.layer_gold.fato_despesa_ceap f\n",
        "JOIN mvp_ed_ceap.layer_gold.dim_uf u\n",
        "  ON f.id_uf = u.id_uf\n",
        "GROUP BY u.sigla_uf\n",
        "ORDER BY total_gasto DESC;\n"
      ]
    }
  ],
